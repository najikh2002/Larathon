APP_NAME=Larathon
APP_ENV=local
APP_DEBUG=true
APP_PORT=8000

# Database Configuration
# Supported drivers: sqlite, mysql, pgsql (PostgreSQL)
DB_CONNECTION=sqlite

# SQLite Configuration (when DB_CONNECTION=sqlite)
# DB_DATABASE=database.sqlite

# MySQL Configuration (when DB_CONNECTION=mysql)
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=larathon
# DB_USERNAME=root
# DB_PASSWORD=

# PostgreSQL Configuration (when DB_CONNECTION=pgsql)
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=larathon
# DB_USERNAME=postgres
# DB_PASSWORD=

# Supabase PostgreSQL Configuration (Recommended for production)
# Get these values from your Supabase project settings > Database
# DB_CONNECTION=pgsql
# DB_HOST=db.xxxxxxxxxxxxx.supabase.co
# DB_PORT=5432
# DB_DATABASE=postgres
# DB_USERNAME=postgres.xxxxxxxxxxxxx
# DB_PASSWORD=your-supabase-password

# JWT SETTINGS
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Mail Configuration
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=your-email@gmail.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_FROM_NAME="Larathon"

# Storage/Filesystem Configuration
# Supported drivers: local, supabase, s3, r2, minio, spaces, wasabi, b2
# All S3-compatible storage services are supported via the universal S3 driver
FILESYSTEM_DISK=local

# =============================================================================
# Supabase Storage (Recommended for Serverless)
# =============================================================================
# Get these from: Supabase Dashboard > Settings > API
# FILESYSTEM_DISK=supabase
# SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
# SUPABASE_KEY=your-supabase-anon-key
# SUPABASE_BUCKET=larathon

# =============================================================================
# AWS S3 (Original)
# =============================================================================
# FILESYSTEM_DISK=s3
# AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
# AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=larathon
# AWS_URL=https://cdn.yourdomain.com  # Optional: CloudFront URL

# =============================================================================
# Cloudflare R2 (Recommended - Free egress, S3-compatible)
# =============================================================================
# Get these from: Cloudflare Dashboard > R2 > Manage R2 API Tokens
# FILESYSTEM_DISK=r2
# R2_ACCESS_KEY_ID=your-r2-access-key-id
# R2_SECRET_ACCESS_KEY=your-r2-secret-key
# R2_BUCKET=larathon
# R2_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
# R2_PUBLIC_URL=https://files.yourdomain.com  # Custom domain

# =============================================================================
# MinIO (Self-hosted S3-compatible)
# =============================================================================
# FILESYSTEM_DISK=minio
# MINIO_ACCESS_KEY=minioadmin
# MINIO_SECRET_KEY=minioadmin
# MINIO_BUCKET=larathon
# MINIO_ENDPOINT=http://localhost:9000  # or your MinIO server URL
# MINIO_PUBLIC_URL=http://localhost:9000/larathon

# =============================================================================
# DigitalOcean Spaces (S3-compatible)
# =============================================================================
# FILESYSTEM_DISK=spaces
# SPACES_ACCESS_KEY=your-spaces-access-key
# SPACES_SECRET_KEY=your-spaces-secret-key
# SPACES_REGION=nyc3  # or sgp1, fra1, etc.
# SPACES_BUCKET=larathon
# SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
# SPACES_URL=https://larathon.nyc3.cdn.digitaloceanspaces.com  # CDN URL

# =============================================================================
# Wasabi (S3-compatible, cheap storage)
# =============================================================================
# FILESYSTEM_DISK=wasabi
# WASABI_ACCESS_KEY=your-wasabi-access-key
# WASABI_SECRET_KEY=your-wasabi-secret-key
# WASABI_REGION=us-east-1  # or us-west-1, eu-central-1, etc.
# WASABI_BUCKET=larathon
# WASABI_ENDPOINT=https://s3.wasabisys.com
# WASABI_URL=https://s3.wasabisys.com/larathon

# =============================================================================
# Backblaze B2 (S3-compatible, affordable)
# =============================================================================
# FILESYSTEM_DISK=b2
# B2_ACCESS_KEY=your-b2-key-id
# B2_SECRET_KEY=your-b2-application-key
# B2_REGION=us-west-002  # or check your bucket region
# B2_BUCKET=larathon
# B2_ENDPOINT=https://s3.us-west-002.backblazeb2.com
# B2_URL=https://f002.backblazeb2.com/file/larathon

